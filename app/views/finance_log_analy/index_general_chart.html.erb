
<div class="container">
	<ul class="nav nav-tabs" id="index_tabs">
		<li role="presentation" class="active"><a href="#pie" aria-controls="pie" data-toggle="tab">PIE CHART</a></li>
		<li role="presentation"><a href="#line" aria-controls="line" data-toggle="tab">LINE CHART</a></li>
		<li role="presentation"><a href="#sample" aria-controls="sample" data-toggle="tab">CHART SAMPLE</a></li>

		<li role="presentation" class="pull-right"><%=link_to 'index',root_path %></li>
	</ul>

	<div class="well" id="search_chart_well">
		<%= form_tag(finance_log_analy_index_general_chart_path, method: "get",class: "form-inline") do %>
			<div class="form-group">
				<%= label_tag(:start, "start_time") %> 
	      				<%= text_field_tag(:start_time,getBegTime(@start_time),class: 'form-control') %> 
			</div>
			<div class="form-group">
				<%= label_tag(:end, "end_time") %> 
	      				<%= text_field_tag(:end_time,Time.now.strftime(@end_time),class: 'form-control') %> 
			</div>
			<button type="submit" class="btn btn-default">search</button>
		<% end %>
	</div>
</div>


  <div class="tab-content">
	<div class="tab-pane active" id="pie">
		<div class="container">
			<%= render partial:"pie_chart" %>
		</div>
	</div>
	<div class="tab-pane" id="line">
		<div class="container">
			<%= render partial:"line_chart" %>
		</div>
	</div>
	<div class="tab-pane" id="sample">
		<div class="container">
			<%= render partial:"chart_sample" %>
		</div>
	</div>
  </div>