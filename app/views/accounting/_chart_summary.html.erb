<div class="well">
	<div class="row">		
		<div class="col-md-1">
			支出饼图:
		</div>
		<div class="col-md-3">
			<canvas id="pie_chart_accounting_outcome"></canvas>
		</div>
		<div class="col-md-1">
			收入支出饼图:
		</div>
		<div class="col-md-3">
			<canvas id="pie_chart_accounting_compare"></canvas>
		</div>
		<div class="col-md-4">
			<table class="table table-striped table-bordered table-hover" id="pie_chart_table">
				<thead>
					<tr>
						<th>收支</th>
						<th>消费子类型</th>
						<th>金额</th>
					</tr>
				</thead>
				<tbody>
					<% if @ars_all.blank? %>
						<tr>
							<td>收入</td>
							<td>全选</td>
							<td>+ <%= @all_income %></td>
						</tr>
						<tr>
							<td>支出</td>
							<td>全选</td>
							<td>- <%= @all_outcome %></td>
						</tr>
					<% else %>
						<% @ars_all.each do |pay_symbol,pay_hash| %>
							<% pay_hash.each do |consumption_sub_type,pay_amount| %>
								<tr>
								
									<td><%= pay_symbol %></td>
									<td><%= consumption_sub_type %></td>
									<td>
										<% if pay_symbol=="支出" %>
											- 
										<% else %>
											+
										<% end %>
										<%= pay_amount %>
									</td>			
								</tr>
							<% end %>
						<% end %>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>